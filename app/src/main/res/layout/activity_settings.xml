<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Sécurité"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="53dp" />

            <Button
                android:id="@+id/editPassword_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:text="Changer mot de passe"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="120dp"
                android:background="@drawable/button_nextpage_color"/>

            <Button
                android:id="@+id/editPin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:text="Changer code PIN"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="188dp"
                android:background="@drawable/button_nextpage_color"/>

            <Button
                android:id="@+id/editFakePin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:text="Changer faux code PIN"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="188dp"
                android:background="@drawable/button_nextpage_color"/>

            <Button
                android:id="@+id/editAlertMessage_button"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="message d'alerte"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="188dp"
                android:background="@drawable/button_nextpage_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="(Favoris)"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="313dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Contacts"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="313dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/settings_contactsList"
                android:layout_width="332dp"
                android:layout_height="248dp"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <Button
                android:id="@+id/settings_addContact_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ajouter un contact"
                android:background="@drawable/button_nextpage_color"/>

            <Button
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Se déconnecter"
                android:background="@drawable/button_color"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>